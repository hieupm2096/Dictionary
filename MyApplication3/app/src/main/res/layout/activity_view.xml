<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/txtTu"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="63dp"
        android:text="Dictionary"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingTop="7dp"
        android:textColor="#000000"/>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/icon_voice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_alignTop="@+id/txtTu" />

    <TextView
        android:id="@+id/txtPhienAm"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="[ˈdɪkʃəneri]"
        android:textSize="20dp"
        android:paddingTop="7dp"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/txtTu"
        android:layout_alignBottom="@+id/txtTu"
        android:layout_toRightOf="@+id/txtTu"
        android:layout_toEndOf="@+id/txtTu" />

    <TextView
        android:id="@+id/txtLoaiTu"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Danh từ"
        android:textSize="20dp"
        android:paddingTop="7dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/txtTu"
        android:layout_alignLeft="@+id/txtTu"
        android:layout_alignStart="@+id/txtTu" />

    <TextView
        android:id="@+id/txtDinhNghia"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/txtLoaiTu"
        android:layout_alignStart="@+id/txtLoaiTu"
        android:layout_below="@+id/txtLoaiTu"
        android:text="- Từ điển"
        android:textSize="20dp"
        android:textColor="#E33539"
        android:paddingTop="7dp"/>

    <TextView
        android:id="@+id/txtViDu"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/txtDinhNghia"
        android:layout_alignStart="@+id/txtDinhNghia"
        android:layout_below="@+id/txtDinhNghia"
        android:text="a walking dictionary"
        android:textSize="20dp"
        android:textColor="#000000"
        android:paddingTop="7dp"/>
    <TextView
        android:id="@+id/txtDinhNghiaVD"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/txtViDu"
        android:layout_alignStart="@+id/txtViDu"
        android:layout_below="@+id/txtViDu"
        android:text="từ điển sống; người học rộng biết nhiều"
        android:textSize="20dp"
        android:textColor="#0404B4"
        android:paddingTop="7dp"/>

</RelativeLayout>