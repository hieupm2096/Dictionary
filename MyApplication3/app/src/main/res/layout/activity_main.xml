<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="640dp"
    android:background="@drawable/backgroundpink"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/label_app"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:width="300dp"
        android:textColor="#ffffff"
        android:text="Dictionary"
        android:textSize="@android:dimen/notification_large_icon_width" />

    <TextView
        android:id="@+id/label_app_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/label_app"
        android:layout_marginTop="13dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnspeak"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtsearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/input"
        android:elevation="8dp"
        android:text="Speak"
        android:textColor="#aaaaaaaa"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btncamera"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/txtsearch"
        android:layout_marginRight="7dp"
        android:background="@drawable/input"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="8dp"
        android:text="Camera"
        android:textColor="#aaaaaaaa"
        android:textSize="24dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnacdemy"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btnspeak"
        android:layout_alignStart="@+id/btnspeak"
        android:layout_alignTop="@+id/btnassistance"
        android:background="@drawable/input"
        android:elevation="8dp"
        android:text="Academy"
        android:textColor="#aaaaaaaa"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnassistance"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btncamera"
        android:layout_alignStart="@+id/btncamera"
        android:layout_below="@+id/btnspeak"
        android:layout_marginTop="21dp"
        android:background="@drawable/input"
        android:elevation="8dp"
        android:text="Assistance mode"
        android:textColor="#aaaaaaaa"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnspeak"
        android:layout_alignStart="@+id/btnspeak"
        android:layout_below="@+id/label_app_detail"
        android:layout_marginTop="65dp"
        android:height="50dp"
        android:paddingRight="20dp"
        android:background="@drawable/input"
        android:elevation="8dp"
        android:layout_marginRight="7dp"
        android:ems="10"
        android:hint="Type word for meaning ..."
        android:paddingLeft="30dp"
        />


</RelativeLayout>